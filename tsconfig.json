{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",              // ✅ Dùng CommonJS cho dễ deploy Node.js
    "moduleResolution": "Node",        // ✅ Không cần NodeNext nữa
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
